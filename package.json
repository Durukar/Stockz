{
	"name": "stockz",
	"version": "1.0.0",
	"workspaces": ["client", "server"],
	"scripts": {
		"dev": "wrangler dev",
		"b": "bun run build",
		"build": "cd client && bun run build",
		"deploy": "wrangler deploy --minify",
